package myArrayList;

import java.util.Arrays;

public class MyArrayList{
    private int[] integer_array = null;
    int current_size=50;
    int max_size=50;

    //Constructor to initialize private data member
    public MyArrayList(){
	integer_array = new int[max_size];
    }

    //Method to sort array in ascending order
   public void sort_array(){
	    Arrays.sort(integer_array);
    }
    
    //Method to insert new value into the array and keep it sorted
    public void insertSorted(int newValue){
    	if(max_size <= current_size){
	    max_size = max_size + (Math.ceil(maxsize/2));
            integer_array[integer_array.length - 1] = newValue;
	    sort_array();
	}
    }

    //Method to remove the given value from the array and keep it sorted
    public void removeValue(int value){
	int index=0;
	for(int i=0; i<current_size; i++){
	    if(integer_array[i] == value){
		index = i;
		current_size--;
	    }
	    for(int j=index; j<current_size; j++){
		integer_array[j] = integer_array[j+1];
	    }
	}
    }
    
    //Function skeleton for further use
    public int intIndexOf(int value){
	return -1;
    }

    public int size(){
	return -1;
    }

    public int sum(){
	return -1;
    }
}
